<p id="notice"><%= notice %></p>

<h1>Project List</h1>

<table>
  <thead>
  <tr>
    <th>Project Name</th>
    <% @metric_names.each do |metric_name| %>
    <th><%= metric_name.camelcase %> Metric</th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <% @metric_names.each do |metric_name| %>
          <% sample = project.metric_samples.where(metric_name: metric_name).last %>
        <td id="<%= "#{project.name}_#{metric_name}_metric" %>"><%= sample.try(:score) %>&nbsp;<%=raw sample.try(:image) %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
