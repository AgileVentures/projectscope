<!DOCTYPE html>
<html>
<head>
  <title>Projectscope</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<% unless notice.nil? %>
			      <div class="alert alert-info"><%= notice %></div>
			    <% end%>
			    <% unless alert.nil? %>
			      <div class="alert alert-danger"><%= alert %></div>
			    <% end %>
			</div>
			<div class="col-md-3"></div>
	    </div>
	    <div class="row">
			<% if user_signed_in? %>
				<%= link_to('Logout', destroy_user_session_path, :method => :delete, :class => "btn btn-md btn-primary") %> 
			<% end %>
			<%= yield %>
		</div>
		</div>
	</div>
</body>
</html>
